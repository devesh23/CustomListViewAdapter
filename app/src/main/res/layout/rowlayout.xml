<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:background="#ffff8135">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/FoodPoster"

        android:contentDescription="@string/Chicken_kadai"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/Text_View"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/FoodPoster"
        android:layout_toEndOf="@+id/FoodPoster"
        android:textColor="#ff000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/Text_View2"
        android:textStyle="bold"

        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Text_View"
        android:layout_toEndOf="@+id/Text_View"
        android:textColor="#FF000000" />
     <View
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="#FFFFFF"
         android:layout_below="@+id/FoodPoster"/>


</RelativeLayout>